{{#if addNewAnswer}}
  <div class="update-box">
    <h2>New Answer</h2>
    <form>
      <div class="form-group">
        <label for="an_author">Your Name</label>
        {{input value=an_author class="an_author"}}
      </div>

      <div class="form-group">
        <label for="an_notes">Your Answer</label>
        {{textarea rows=8 value=an_notes class="an_notes"}}
      </div>

      <button {{action 'saveAnswer'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'answerFormShow'}}>Enter New Answer</button>
{{/if}}
